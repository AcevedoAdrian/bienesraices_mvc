extends ../layout/index

block contenido  
  .py-10 
    h1.text-4xl.my-10.font-extrabold.text-center Binenes
      span.font-normal.text-teal-600 Raices 
    h2.text-center.text-2xl.font-extrabold=  pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold ")= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5(method="POST"  )
          input(type="hidden" name="_csrf" value= csrfToken)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for=password) Coloca Tu Nuevo Password
            input#nombre.w-full.px-3.py-2.border.border-gray-500.rounded-md.placeholder-gray-400(type="password" name="password" placeholder="Tu Nuevo Password")
          
          input.w-full.bg-teal-600.text-white.font-bold.py-3.cursor-pointer(class="hover:bg-teal-700" type="submit" value="Guardar Password")